{
  "name": "xcrypt",
  "version": "0.6.1",
  "description": "Cross platform compatible encrypt and decrypt methods",
  "bin": {
    "prompt": "./bin/prompt.sh",
    "xcrypt": "./bin/xcrypt.sh"
  },
  "directories": {
    "lib": "lib"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./dist/index.js",
      "import": "./lib/index.mjs",
      "default": "./lib/index.mjs"
    },
    "./*": {
      "types": "./lib/*.d.ts",
      "require": "./dist/*.js",
      "import": "./lib/*.mjs",
      "default": "./lib/*.mjs"
    }
  },
  "types": "./lib/index.d.ts",
  "tsup": {
    "skipNodeModulesBundle": true
  },
  "tap": {
    "node-arg": [
      "--no-warnings",
      "--experimental-loader",
      "@istanbuljs/esm-loader-hook"
    ]
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.2.0",
    "@types/node": "^20.8.7",
    "@types/tap": "^15.0.10",
    "@types/yargs": "^17.0.29",
    "prettier": "^3.0.3",
    "tap": "^18.5.2",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "test": "tap lib/*.test.mjs",
    "test:report": "tap --coverage-report=html lib/*.test.mjs",
    "clean": "rm -Rf ./dist",
    "build": "npm run clean && tsup lib/*.mjs",
    "format": "prettier --write lib/ bin/",
    "type-check": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "encryption",
    "crypt"
  ],
  "author": "Eugene Song <tilleps@gmail.com>",
  "license": "MIT"
}
